<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/t_pregunta"
        android:layout_width="353dp"
        android:layout_height="44dp"
        android:layout_marginTop="80dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t_palabraAdivina"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="72dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/t_pregunta"
        app:layout_constraintTop_toBottomOf="@+id/t_pregunta" />

    <GridLayout
        android:id="@+id/gr_botonesLetras"
        android:layout_width="364dp"
        android:layout_height="396dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenAhorcado">

    </GridLayout>

    <ImageView
        android:id="@+id/imagenAhorcado"
        android:layout_width="88dp"
        android:layout_height="81dp"
        app:layout_constraintBottom_toBottomOf="@+id/t_palabraAdivina"
        app:layout_constraintStart_toEndOf="@+id/t_palabraAdivina"
        app:layout_constraintTop_toTopOf="@+id/t_palabraAdivina"/>

</androidx.constraintlayout.widget.ConstraintLayout>