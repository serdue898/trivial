<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t_tunroJugador"
        android:layout_width="157dp"
        android:layout_height="35dp"
        android:text="@string/t_tunroJugador"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715" />

    <Button
        android:id="@+id/bt_dado"
        android:layout_width="72dp"
        android:layout_height="55dp"
        android:layout_marginTop="84dp"
        android:drawableEnd="@drawable/baseline_casino_24"
        android:text="1 "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_tunroJugador" />

    <Button
        android:id="@+id/bt_clasificacion"
        android:layout_width="63dp"
        android:layout_height="53dp"
        android:drawableEnd="@drawable/baseline_format_list_numbered_24"

        android:text="1 "
        app:layout_constraintBottom_toBottomOf="@+id/bt_dado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bt_dado" />

    <ImageView
        android:id="@+id/i_avatar"
        android:layout_width="92dp"
        android:layout_height="81dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/t_tunroJugador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/t_tunroJugador"
        app:layout_constraintVertical_bias="0.26"
        app:srcCompat="@drawable/baseline_casino_24" />

    <FrameLayout
        android:layout_width="388dp"
        android:layout_height="388dp"
        android:layout_margin="20dp"

        android:layout_weight="20"
        android:background="@drawable/background_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2">

        <GridLayout
            android:id="@+id/gr_tablero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.287">

        </GridLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>